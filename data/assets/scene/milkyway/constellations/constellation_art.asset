  Name = "Show Constellation Art",
  Command = [[
    openspace.setPropertyValue("Scene.ImageConstellation*.Renderable.Opacity", 0);
    openspace.setPropertyValue("Scene.ImageConstellation*.Renderable.Enabled", true);
