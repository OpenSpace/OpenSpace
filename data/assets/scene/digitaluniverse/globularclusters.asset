  Identifier = "GlobularClusters",
  Renderable = {
    Type = "RenderablePolygonCloud",
    Enabled = false,
    Labels = {
      File = speck .. "gc.label",
      Color = { 0.36, 0.36, 0.0 },
      Size = 16.7,
      MinMaxSize = { 4, 20 },
      Unit = "pc"
    },
    Coloring = {
      FixedColor = { 0.8, 0.8, 0.0 }
