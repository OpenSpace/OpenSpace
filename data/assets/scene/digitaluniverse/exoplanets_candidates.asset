local textures = asset.resource({
    Name = "Exoplanets Candidates Textures",
    Type = "HttpSynchronization",
    Identifier = "digitaluniverse_exoplanets_candidates_textures",
    Version = 1
})

local speck = asset.resource({
  Name = "Exoplanets Candidates Speck Files",
  Type = "HttpSynchronization",
  Identifier = "digitaluniverse_exoplanets_candidates_speck",
  Version = 2
})


local Object = {
  Identifier = "PlanetaryCandidates",
  Renderable = {
    Type = "RenderablePointCloud",
    Enabled = false,
    Opacity = 0.99,
    File = speck .. "expl_candidates.speck",
    Unit = "pc",
    Texture = {
      File = textures .. "halo.png",
    },
    Coloring = {
      FixedColor = { 1.0, 1.0, 0.0 },
      ColorMapping = {
        File = speck .. "expl_candidates.cmap",
        ParameterOptions = {
          { Key = "survey_num" }
        }
      }
    },
    SizeSettings = {
      ScaleExponent = 17.8,
      MaxSize = 1.0,
      EnableMaxSizeControl = true
    }
  },
  GUI = {
    Name = "Exoplanetary Candidates",
    Path = "/Milky Way/Exoplanets",
    Description = [[Stars that are strong candidates for hosting a system of planets. Further observations are needed to confirm a planet's existence.]]
  }
}


asset.onInitialize(function()
  openspace.addSceneGraphNode(Object)
end)

asset.onDeinitialize(function()
  openspace.removeSceneGraphNode(Object)
end)

asset.export(Object)



asset.meta = {
  Name = "Exoplanetary Candidates",
  Version = "12.09",
  Description = "Stars that are strong candidates for hosting a system of planets. Further observations are needed to confirm a planet's existence.",
  Author = "Brian Abbott, Zack Reeves, Emily Rice, and Jason No (AMNH)",
  URL = "https://www.amnh.org/research/hayden-planetarium/digital-universe",
