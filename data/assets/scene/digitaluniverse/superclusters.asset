  Name = "Galaxy Superclusters Speck Files",
  Type = "HttpSynchronization",
  Identifier = "digitaluniverse_superclusters_speck",
  Version = 2
})

local object = {
  Identifier = "GalaxySuperclusters",
  Renderable = {
    Type = "RenderableBillboardsCloud",
    Enabled = false,
