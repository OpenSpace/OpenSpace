  Name = "Molecule File",
  Type = "UrlSynchronization",
  Identifier = "molecule_file",
  Url = {
    moleculeDb .. "full.xyz",
    moleculeDb .. "full.arc",
    moleculeDb .. "1mh1.pdb",
    moleculeDb .. "inside-md-npt.gro",
    moleculeDb .. "inside-md-pullout.xtc",
    moleculeDb .. "centered.gro",
    moleculeDb .. "centered.xtc",
  }
})

