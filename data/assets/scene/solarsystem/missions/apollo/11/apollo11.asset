    -- a 10s linear transition to the location where the descentKeyframes start.
    ["1969 JUL 20 20:14:30"] = {
      Type = "SpiceTranslation",
      Target = kernels.ID.Apollo11LEM,
      Observer = coreKernels.ID.Moon,
      Frame = coreKernels.Frame.Moon
