  Identifier = "Apollo11Insignia",
  Parent = moon.Moon.Identifier,
  Transform = {
    Translation = {
      Type = "GlobeTranslation",
      Globe = moon.Moon.Identifier,
      Latitude = 0.67409,
      Longitude = 23.47298,
      Altitude = 110000,
      UseHeightmap = false
    }
  },
  Renderable = {
    Type = "RenderablePlaneImageLocal",
    Size = 100000,
    Origin = "Center",
    Billboard = true,
    Texture = insigniasPath .. "apollo11.png",
    Opacity = 0.0
  },
  GUI = {
    Path = "/Other/Labels",
    Name = "Apollo 11 Insignia"
  }
}

