local earthTransforms = asset.require("scene/solarsystem/planets/earth/transforms")
local transforms = asset.require("./frame")
asset.require("./frame")
asset.require("spice/base")

local kernels = asset.syncedResource({
  Name = "Artemis Kernels",
  Type = "HttpSynchronization",
  Identifier = "artemis_kernels",
  Version = 1
})

local ArtemisEarthTrail= {
  Identifier = "ArtemisEarthTrail",
  Parent = earthTransforms.EarthCenter.Identifier,
  Renderable = {
    Type = "RenderableTrailTrajectory",
    Translation = {
      Type = 'SpiceTranslation',
      Target = -1023, -- Artemis
      Observer = "EARTH",
      Frame = 'GALACTIC',
      Kernels = { kernels .. "artemisJPLH-fetchDec15.bsp" }
    },
    Color = { 0.0, 0.0, 0.9 },
    StartTime = "2022-Nov-16 09:03:00.000",
    EndTime = "2022-Dec-11 17:21:14.764",
    SampleInterval = 60 -- Sample rate of once per minute
  },
  GUI = {
    Name = "Artemis Earth Trail",
    Path = "/Solar System/Missions/Artemis/Trails",
    Description = [[
      Artemis Trail relative to the Earth.
    ]],
  }
}

local ArtemisTrailCoRevOrbit = {
  Identifier = "ArtemisTrailCoRevOrbit",
  Parent = transforms.EarthMoonCoRevFrame.Identifier,
  Renderable = {
    Type = "RenderableTrailTrajectory",
    Translation = {
      Type = 'SpiceTranslation',
      Target = -1023, -- Artemis
      Observer = "EARTH",
      Frame = 'EARTH_MOON_COREV',
      Kernels = { kernels .. "artemisJPLH-fetchDec15.bsp" }
    },
    Color = { 0.0, 0.8, 0.0 },
    StartTime = "2022-Nov-16 09:03:00.000",
    EndTime = "2022-Dec-11 17:21:14.764",
    SampleInterval = 60 -- Sample rate of once per minute
  },
  GUI = {
    Name = "Artemis Earth Moon Co-revolving Trail",
    Path = "/Solar System/Missions/Artemis/Trails",
    Description = [[
      Artemis Trail that co-revolves with Earth and the Moon.
    ]],
  }
}

asset.onInitialize(function()
  openspace.addSceneGraphNode(ArtemisEarthTrail)
  openspace.addSceneGraphNode(ArtemisTrailCoRevOrbit)
end)

asset.onDeinitialize(function()

  openspace.removeSceneGraphNode(ArtemisTrailCoRevOrbit)
  openspace.removeSceneGraphNode(ArtemisEarthTrail)
end)

asset.export(ArtemisEarthTrail)
asset.export(ArtemisTrailCoRevOrbit)

asset.meta = {
  Name = "Artemis Trails",
  Version = "1.0",
  Description = [[
    Trail of Artemis in respect to Earth and the Earth Moon co-revolving frame
  ]],
  Author = "OpenSpace Team",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
