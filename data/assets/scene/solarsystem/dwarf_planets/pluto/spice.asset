local base = asset.require("spice/base")



local data = asset.resource({
  Name = "Pluto Kernels",
  Type = "HttpSynchronization",
  Identifier = "pluto_kernels",
  Version = 1
})


local kernels = {
  data .. "NavPE_de433_od122.bsp",
  data .. "NavSE_plu047_od122.bsp",
  data .. "ssd_jpl_nasa_gov_plu043.bsp"
}

local ID = {
  PlutoBarycenter = base.ID.PlutoBarycenter,
  Charon = "CHARON",
  Hydra = "HYDRA",
  Styx = "STYX",
  Nix = "NIX",
  Kerberos = "KERBEROS",
  Pluto = base.ID.Pluto
}

local Frame = {
  Pluto = base.Frame.Pluto,
  Charon = base.Frame.Charon,
  Hydra = base.Frame.Hydra,
  Styx = base.Frame.Styx,
  Nix = base.Frame.Nix,
  Kerberos = base.Frame.Kerberos
}


asset.onInitialize(function()
  openspace.spice.loadKernel(kernels)
end)

asset.onDeinitialize(function()
  openspace.spice.unloadKernel(kernels)
end)

asset.export("ID", ID)
asset.export("Frame", Frame)



asset.meta = {
  Name = "Pluto Spice Kernels",
  Version = "1.0",
  Description = "Generic SPICE kernels for Pluto",
  Author = "OpenSpace Team",
  URL = "https://naif.jpl.nasa.gov/pub/naif/pds/wgc/kernels/spk/",
  License = "NASA"
}
