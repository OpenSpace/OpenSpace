local transforms = asset.require("scene/solarsystem/sun/transforms")



local whiteTexture = openspace.createSingleColorImage(
  "one_pixel_texture_color_white",
  { 1.0, 1.0, 1.0 }
)


local WhiteBackground = {
  Identifier = "WhiteBackground_sphere",
  Parent = transforms.SolarSystemBarycenter.Identifier,
  Renderable = {
    Type = "RenderableSphereImageLocal",
    Enabled = false,
    Texture = whiteTexture,
    Size = 5E16,
    Segments = 50,
    DisableFadeInOut = true,
    Orientation = "Inside"
  },
  GUI = {
      Name = "White Background",
      Path = "/Solar System/Heliosphere",
      Description = [[A big white sphere encapsulating the solar system, for easy access
        when taking screen shots or movie cips for presentations or
        publications.]],
      Focusable = false
  }
}


asset.onInitialize(function()
  openspace.addSceneGraphNode(WhiteBackground)
end)

asset.onDeinitialize(function()
  openspace.removeSceneGraphNode(WhiteBackground)
end)

asset.export(WhiteBackground)



asset.meta = {
  Name = "White Background",
  Description = [[A big sphere that works as a white background when inside the solar
    system, for easy access when taking screen shots or movie cips for presentations or
    publications.]],
  Author = "CCMC",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
