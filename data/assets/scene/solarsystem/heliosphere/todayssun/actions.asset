local ToggleWhiteBackground = {
  Identifier = "os.todayssun.ToggleWhiteBackground",
  Name = "Toggle white background on and off",
  Command = [[
    if not openspace.propertyValue("Scene.WhiteBackground_sphere.Renderable.Enabled") then
      openspace.setPropertyValueSingle("Scene.WhiteBackground_sphere.Renderable.Fade",0)
      openspace.setPropertyValueSingle("Scene.WhiteBackground_sphere.Renderable.Enabled", true)
      openspace.setPropertyValueSingle("Scene.WhiteBackground_sphere.Renderable.Fade",1,1)
      openspace.setPropertyValueSingle("Scene.Stars.Renderable.Fade",0,1)
      openspace.setPropertyValueSingle("Scene.Stars.Renderable.Enabled", false)
      openspace.setPropertyValue("Scene.WSA*.Renderable.ABlendingEnabled", false)
    else
      openspace.setPropertyValueSingle("Scene.WhiteBackground_sphere.Renderable.Fade",0,1)
      openspace.setPropertyValueSingle("Scene.WhiteBackground_sphere.Renderable.Enabled", false)
      openspace.setPropertyValueSingle("Scene.Stars.Renderable.Fade",0)
      openspace.setPropertyValueSingle("Scene.Stars.Renderable.Enabled", true)
      openspace.setPropertyValueSingle("Scene.Stars.Renderable.Fade",1,1)
      openspace.setPropertyValue("Scene.WSA*.Renderable.ABlendingEnabled", true)
    end
  ]],
  Documentation = "This toggles a white sphere, the stars and the adative blending of any fieldlines"
}


asset.onInitialize(function()
  openspace.action.registerAction(ToggleWhiteBackground)
end)

asset.onDeinitialize(function()
  openspace.action.removeAction(ToggleWhiteBackground)
end)



asset.meta = {
  Name = "Todays Sun's Actions",
  Description = "Actions related to the real time visualizations of the Sun",
  Author = "CCMC",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
