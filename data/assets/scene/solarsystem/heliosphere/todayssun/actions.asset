local ToggleWhiteBackground = {
  Identifier = "os.todayssun.ToggleWhiteBackground",
  Name = "Toggle white background",
  Command = [[
    if openspace.propertyValue("Scene.WhiteBackground_sphere.Renderable.Enabled") then
      openspace.fadeOut("Scene.WhiteBackground_sphere.Renderable")
      openspace.fadeOut("Scene.Stars.Renderable")
      openspace.setPropertyValue("Scene.WSA_54_Fieldlines*.Renderable.ABlendingEnabled", true)
    else
      openspace.fadeIn("Scene.WhiteBackground_sphere.Renderable")
      openspace.fadeIn("Scene.Stars.Renderable")
      openspace.setPropertyValue("Scene.WSA*.Renderable.ABlendingEnabled", false)
    end
  ]],
  Documentation = [[This toggles a white sphere, the stars, and the additive blending of
    any fieldlines]]
}


asset.onInitialize(function()
  openspace.action.registerAction(ToggleWhiteBackground)
end)

asset.onDeinitialize(function()
  openspace.action.removeAction(ToggleWhiteBackground)
end)



asset.meta = {
  Name = "Todays Sun's Actions",
  Description = "Actions related to the real-time visualizations of the Sun",
  Author = "CCMC",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
