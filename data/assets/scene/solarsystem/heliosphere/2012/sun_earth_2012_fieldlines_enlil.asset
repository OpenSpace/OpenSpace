      enlilVelocityColorTable,
    },
    ColorTableRanges = colorRanges,
    FlowEnabled = true,
    ReversedFlow = true,
    ParticleSize = 5,
    ParticleSpacing = 25,
    FlowSpeed = 25,
    LoadAtRuntime = true
  },
  GUI = {
    Name = "Fieldlines ENLIL STEREO A",
    Path = "/Solar System/Heliosphere"
  }
