local globeIdentifier = asset.require("../../venus").Venus.Identifier


local texturesPath = asset.syncedResource({
  Name = "Venus Textures",
  Type = "HttpSynchronization",
  Identifier = "venus_textures",
  Version = 2
})

local combo = {
  Identifier = "Clouds_Magellan_Combo_NewYork",
  Name = "Clouds Magellan Combo [New York]",
  Enabled = asset.enabled,
  Type = "ByLevelTileLayer",
  LevelTileProviders = {
    {
      MaxLevel = 4,
      TileProvider = {
        Identifier = "Clouds",
        Name = "Clouds",
        FilePath = texturesPath .. "venus_clouds.jpg"
      }
    },
    {
      MaxLevel = 7,
      TileProvider = {
        Identifier = "Magellan_Mosaic_NewYork",
        Name = "Magellan Mosaic [New York]",
        FilePath = asset.localResource("magellan_mosaic_newyork.vrt"),
        BlendMode = "Color",
        Settings = {
          Gamma = 2.0
        }
      }
    },
  },
}

asset.onInitialize(function()
  openspace.globebrowsing.addLayer(globeIdentifier, "ColorLayers", combo)
end)

asset.onDeinitialize(function()
  openspace.globebrowsing.deleteLayer(globeIdentifier, "ColorLayers", combo)
end)

asset.export(combo)
