local assetHelper = asset.require("util/asset_helper")
local globeIdentifier = asset.require("../../venus").Venus.Identifier

local texturesPath = asset.syncedResource({
  Name = "Venus Textures",
  Type = "HttpSynchronization",
  Identifier = "venus_textures",
  Version = 1
})

local layer = {
  Identifier = "Texture",
  FilePath = texturesPath .. "venus.jpg",
  Settings = {
    Opacity = 0.48,
    Gamma = 0.48
  }
}

assetHelper.registerLayerAndExport(asset, layer, globeIdentifier, "ColorLayers")


asset.meta = {
  Name = "Venus Texture",
  Version = "1.0",
  Description = [[ This asset supplies a default texture for Venus.]],
  Author = "OpenSpace Team",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
