end)

asset.onDeinitialize(function()
  openspace.removeSceneGraphNode(Margaret)
  openspace.removeSceneGraphNode(MargaretTrail)
  openspace.removeSceneGraphNode(MargaretLabel)

  openspace.spice.unloadKernel(kernel.ura116)
end)

