  Parent = transforms.SolarSystemBarycenter.Identifier,
  Renderable = {
    Type = "RenderableTrailOrbit",
    Translation = {
      Type = "SpiceTranslation",
      Target = "EARTH BARYCENTER",
      Observer = "SSB"
    },
    Color = { 0.5, 0.8, 1.0 },
    Period = 365.242,
    Resolution = 1000,
    Enabled = false
