        openspace.setPropertyValue("Scene.Aurora*.Renderable.Enabled", false)
        openspace.setPropertyValue("Scene.icon*.Renderable.Enabled", false)
        openspace.fadeIn("Scene.AuroraGreenPink*.Renderable")
        openspace.fadeIn("Scene.iconGreenPink*.Renderable")
        openspace.fadeIn("Scene.AuroraPink*.Renderable")
