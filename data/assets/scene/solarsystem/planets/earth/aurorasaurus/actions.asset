
local showAllAuroras = {
    Identifier = "os.allAuroras",
    Name = "Show all Auroras",
    Command = [[
        openspace.fadeIn("Scene.Aurora*.Renderable")
        openspace.fadeIn("Scene.icon*.Renderable")
    ]],
    Documentation = [[]],
    GuiPath = "/Aurorasaurus/Icons",
    IsLocal = false
  }

  local toggleNotSeenAuroras = {
    Identifier = "os.toggleNotSeenAuroras",
    Name = "Toggle not seen Auroras",
    Command = [[
        if openspace.propertyValue("Scene.notSeenAuroraIcon1.Renderable.Enabled") then
          openspace.setPropertyValue("Scene.notSeenAuroraIcon*.Renderable.Fade",0,1)
          openspace.setPropertyValue("Scene.notSeenAuroraIcon*.Renderable.Enabled", false)
        else
          openspace.setPropertyValue("Scene.notSeenAuroraIcon*.Renderable.Enabled", true)
          openspace.setPropertyValue("Scene.notSeenAuroraIcon*.Renderable.Fade",1,1)
        end
    ]],
    Documentation = [[]],
    GuiPath = "/Aurorasaurus/Icons",
    IsLocal = false
  }

  local toggleShapeIcons = {
    Identifier = "os.toggleShapeIcons",
    Name = "Toggle shapes on icons",
    Command = [[
        if openspace.propertyValue("Scene.shapeAuroraGreenPinkRed4.Renderable.Enabled") then
          openspace.setPropertyValue("Scene.shape*.Renderable.Fade",0,1)
          openspace.setPropertyValue("Scene.shape*.Renderable.Enabled", false)
          openspace.setPropertyValue("Scene.Aurora*.Renderable.Enabled", true)
          openspace.setPropertyValue("Scene.timeFrameIcon*.Renderable.Enabled", true)
          openspace.setPropertyValue("Scene.Aurora*.Renderable.Fade",1,1)
          openspace.setPropertyValue("Scene.timeFrameIcon*.Renderable.Fade",1,1)
        else
          openspace.setPropertyValue("Scene.Aurora*.Renderable.Fade",0,1)
          openspace.setPropertyValue("Scene.timeFrameIcon*.Renderable.Fade",0,1)
          openspace.setPropertyValue("Scene.Aurora*.Renderable.Enabled", false)
          openspace.setPropertyValue("Scene.timeFrameIcon*.Renderable.Enabled", false)
          openspace.setPropertyValue("Scene.shape*.Renderable.Enabled", true)
          openspace.setPropertyValue("Scene.shape*.Renderable.Fade",1,1)
        end
    ]],
    Documentation = [[]],
    GuiPath = "/Aurorasaurus/Icons",
    IsLocal = false
  }

local showRedAuroras = {
    Identifier = "os.redAuroras",
    Name = "Show only red Auroras",
    Command = [[
        openspace.setPropertyValue("Scene.Aurora*.Renderable.Enabled", false)
        openspace.setPropertyValue("Scene.icon*.Renderable.Enabled", false)
        openspace.fadeIn("Scene.AuroraGreenRed*.Renderable")
        openspace.fadeIn("Scene.iconGreenRed*.Renderable")
        openspace.fadeIn("Scene.AuroraRed*.Renderable")
        openspace.fadeIn("Scene.iconRed*.Renderable")
        openspace.fadeIn("Scene.AuroraPinkRed*.Renderable")
        openspace.fadeIn("Scene.iconPinkRed*.Renderable")
        openspace.fadeIn("Scene.AuroraGreenPinkRed*.Renderable")
        openspace.fadeIn("Scene.iconGreenPinkRed*.Renderable")
    ]],
    Documentation = [[Toggles the visibility of all red auroras and disables the others]],
    GuiPath = "/Aurorasaurus/Icons",
    IsLocal = false
  }

  local showGreenAuroras = {
    Identifier = "os.greenAuroras",
