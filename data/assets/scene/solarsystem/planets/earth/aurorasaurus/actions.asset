        openspace.setPropertyValue("Scene.Aurora*.Renderable.Enabled", false)
        openspace.setPropertyValue("Scene.icon*.Renderable.Enabled", false)
        openspace.fadeIn("Scene.AuroraGreenWhite*.Renderable")
        openspace.fadeIn("Scene.iconGreenWhite*.Renderable")
        openspace.fadeIn("Scene.AuroraWhite*.Renderable")
        openspace.fadeIn("Scene.iconWhite*.Renderable")
        openspace.fadeIn("Scene.AuroraRedWhite*.Renderable")
        openspace.fadeIn("Scene.iconRedWhite*.Renderable")
        openspace.fadeIn("Scene.AuroraGreenPinkWhite*.Renderable")
        openspace.fadeIn("Scene.iconGreenGreenPinkWhite*.Renderable")
