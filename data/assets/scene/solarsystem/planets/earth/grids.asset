    Segments = { 20, 20 },
    Size = { 2 * LightSecond, 2 * LightSecond }
  },
  GUI = {
    Name = "1lsec Grid",
    Path = "/Solar System/Planets/Earth"
  }
}

local plane1lmin = {
  Identifier = "1lminGrid",
  Transform = {
    Rotation = {
      Type = "StaticRotation",
      Rotation = EclipticRotationMatrix
    },
    Translation = {
      Type = "SpiceTranslation",
      Target = "EARTH BARYCENTER",
      Observer = "SSB"
    }
  },
  Renderable = {
    Type = "RenderableGrid",
    Enabled = false,
    Opacity = 0.4,
    Color = { 0.1, 0.5, 0.6 },
    LineWidth = 2.0,
    Segments = { 20, 20 },
    Size = { 2 * LightMinute, 2 * LightMinute }
  },
  GUI = {
    Name = "1lmin Grid",
    Path = "/Solar System/Planets/Earth"
