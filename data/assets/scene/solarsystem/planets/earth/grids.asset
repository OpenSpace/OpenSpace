local LightMinute = 17987547480

local plane1lsec = {
  Identifier = "1lsecGrid",
  Transform = {
    Rotation = {
      Type = "StaticRotation",
      Rotation = EclipticRotationMatrix
    },
    Translation = {
      Type = "SpiceTranslation",
      Target = "EARTH BARYCENTER",
      Observer = "SSB"
    }
  },
  Renderable = {
    Type = "RenderableGrid",
    Enabled = false,
    Opacity = 0.4,
    Color = { 0.1, 0.5, 0.6 },
