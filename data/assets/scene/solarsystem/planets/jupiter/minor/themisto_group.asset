local ThemistoLabel = {
  Identifier = "ThemistoLabel",
  Parent = Themisto.Identifier,
  Renderable = {
    Enabled = false,
    Type = "RenderableLabel",
    Text = "Themisto",
    FontSize = 70.0,
    Size = 7.1,
    MinMaxSize = { 1, 25 },
    OrientationOption = "Camera View Direction",
    BlendMode = "Additive",
    EnableFading = true,
    FadeUnit = "Gm",
    FadeDistances = { 1.5, 120.0 },
    FadeWidths = { 0.5, 50.0 }
