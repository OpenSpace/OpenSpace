local transforms = asset.require("scene/solarsystem/sun/transforms")
local base = asset.require("spice/base")



local SaturnTrail = {
  Identifier = "SaturnTrail",
  Parent = transforms.SolarSystemBarycenter.Identifier,
  Renderable = {
    Type = "RenderableTrailOrbit",
    Translation = {
      Type = "SpiceTranslation",
      Target = base.ID.Saturn,
      Observer = base.ID.SolarSystemBarycenter
    },
    Color = { 0.85, 0.75, 0.51 },
    Period = 10746.94,
    Resolution = 1000
  },
  Tag = { "planetTrail_solarSystem", "planetTrail_giants" },
  GUI = {
    Name = "Saturn Trail",
    Path = "/Solar System/Planets/Saturn",
    Description = "Trail of Saturn as observed by the Sun"
  }
}


asset.onInitialize(function()
  openspace.addSceneGraphNode(SaturnTrail)
end)

asset.onDeinitialize(function()
  openspace.removeSceneGraphNode(SaturnTrail)
end)

asset.export(SaturnTrail)



asset.meta = {
  Name = "Saturn Trail",
  Version = "1.1",
  Description = "Main trail of Saturn. Data from NASA Spice (see base spice asset)",
  Author = "OpenSpace Team",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
