local assetHelper = asset.require("util/asset_helper")
local globeIdentifier = asset.require("../../sun").Sun.Identifier

local texturesPath = asset.syncedResource({
  Type = "HttpSynchronization",
  Name = "Sun textures",
  Identifier = "sun_textures",
  Version = 4
})

local layer = {
  Identifier = "Texture",
  FilePath = texturesPath .. "sun.jpg",
}

assetHelper.registerLayerAndExport(asset, layer, globeIdentifier, "ColorLayers")


asset.meta = {
  Name = "Sun Texture",
  Version = "1.0",
  Description = [[ Default Sun texture for renderable globe.]],
  Author = "OpenSpace Team",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
