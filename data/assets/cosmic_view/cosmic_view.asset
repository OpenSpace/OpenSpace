local data_names = {}
table.insert(data_names, "allenopithecus")
table.insert(data_names, "cercocebus")
table.insert(data_names, "cercopithecus")
table.insert(data_names, "chlorocebus")
table.insert(data_names, "colobus")
table.insert(data_names, "gorilla")
table.insert(data_names, "homo")
table.insert(data_names, "lophocebus")
table.insert(data_names, "macaca")
table.insert(data_names, "pan")
table.insert(data_names, "papio")

local points = {}

for i, name in ipairs(data_names) do
    local point = {
    Identifier = "Points_" .. name,
    Renderable = {
      Type = "RenderableBillboardsCloud",
      Color = { tonumber(i) / 12, 0.4, tonumber(i) / 20 },
      Opacity = 1.0,
      ScaleFactor = 350,
      File = asset.localResource("C:/code/datafiles/categorized/" .. name .. ".speck"),
      DrawLabels = false,
      BillboardMinMaxSize = { 0.0, 250.0 }, -- in pixels
      EnablePixelSizeControl = true
    },
    GUI = {
      Name = "Cosmic View Points: " .. name,
      Path = "/Cosmic/Data"
    }
    }
    table.insert(points, point)

end

asset.onInitialize(function()
    for _, n in ipairs(points) do
        openspace.addSceneGraphNode(n)
    end
end)

asset.onDeinitialize(function()
    for _, n in ipairs(points) do
        openspace.removeSceneGraphNode(n)
    end
end)


for _, n in ipairs(points) do
    asset.export(n)
end
