  Command = [[openspace.setPropertyValueSingle("Scene.Mars.Renderable.Layers.ColorLayers.HiRISE-PSP.Settings.Opacity", 0, 2.0)]],
  Documentation = "Fade out HiRISE layer for Mars",
  GuiPath = "/Solar System/Mars",
  IsLocal = true
}
