asset.onInitialize(function()
  openspace.action.registerAction(gotoSunrise10Seconds)
  openspace.action.registerAction(gotoSunriseDefault)
  openspace.action.registerAction(gotoSunriseInstant)
  openspace.action.registerAction(gotoSunset10Seconds)
  openspace.action.registerAction(gotoSunsetDefault)
  openspace.action.registerAction(gotoSunsetInstant)
end)

asset.onDeinitialize(function()
  openspace.action.removeAction(gotoSunrise10Seconds)
  openspace.action.removeAction(gotoSunriseDefault)
  openspace.action.removeAction(gotoSunriseInstant)
  openspace.action.removeAction(gotoSunset10Seconds)
  openspace.action.removeAction(gotoSunsetDefault)
  openspace.action.removeAction(gotoSunsetInstant)
end)

asset.export(gotoSunrise10Seconds)
asset.export(gotoSunriseDefault)
asset.export(gotoSunriseInstant)
asset.export(gotoSunset10Seconds)
asset.export(gotoSunsetDefault)
