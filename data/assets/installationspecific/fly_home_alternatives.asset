local util = asset.require('./utility_functions')

local solarTargetDistance = 1079252848800 -- 1 lighthour
local solarsystemflightDuration = 9 -- seconds

local cameraPath = [[
  openspace.time.setPause(true)
  ]] .. util.disableLinearFlight() .. [[
  ]] .. util.setCurveType("ZoomOutOverview") .. [[
  openspace.pathnavigation.goToHeight(
    'Sun', 
    ]] .. solarTargetDistance .. [[,
    ]] .. solarsystemflightDuration .. [[
  )
]]

local linearFlight = [[
  ]] .. util.changeAnchor('Sun', 1.0) .. [[
  ]] .. util.applyLinearFlight(solarTargetDistance, 1.2) .. [[
]]

asset.export("cameraPath", cameraPath)
asset.export("linearFlight", linearFlight)
