local mars = asset.require('scene/solarsystem/planets/mars/mars')

local lat = 18.65
local long = 226.2

local OlympusMonsPosition = {
  Identifier = "OlympusMonsPosition",
  Parent = mars.Mars.Identifier,
  InteractionSphere = 25000,
  Transform = {
    Translation = {
        Type = "GlobeTranslation",
        Globe = mars.Mars.Identifier,
        Latitude =  lat,
        Longitude =  long
    },
    Rotation = {
      Type = "GlobeRotation",
      Globe = mars.Mars.Identifier,
      Latitude =  lat,
      Longitude =  long
    },
  },
  GUI = {
    Name = "Olympus Mons",
    Path = "/Mars/"
  }
}

asset.onInitialize(function()
  openspace.addSceneGraphNode(OlympusMonsPosition)
end)

asset.onDeinitialize(function()
  openspace.removeSceneGraphNode(OlympusMonsPosition)
end)

asset.export(OlympusMonsPosition)


asset.meta = {
  Name = "Olympus Mons Position",
  Version = "1.0",
  Description = "A node on the surface of Mars, in the position of Olympus Mons",
  Author = "OpenSpace Team",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
