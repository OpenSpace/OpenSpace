  Identifier = "Huygens",
  Enter = [[
    openspace.setPropertyValue('{moon_saturn}.Renderable.Opacity', 0.0, 3.0)
    openspace.setPropertyValue('{moonTrail_saturn}.Renderable.Opacity', 0.0, 3.0)
    ]] .. util.fadeInTrails({ "TitanTrail", "Titan" }) .. [[
    ]] .. util.fadeInTrails({ "huygensTrail" }) .. [[
