  openspace.pathnavigation.goTo('Moon', true)
]]

local moonState = {
  Identifier = "Moon",
  Enter = [[
    ]] .. util.setOrbitSpeedFactor(0.4) .. [[
    ]] .. util.orbitOnArrival() .. [[
  ]],
  Exit = [[
    ]] .. util.stopOrbiting() .. [[
  ]]
}

local apolloTargetDistance = 1.5E7

local apolloState = {
  Identifier = "Apollo",
  Enter = [[
    ]] .. util.setOrbitSpeedFactor(0.4) .. [[
    ]] .. util.orbitOnArrival() .. [[
  ]],
  Exit = [[
    ]] .. util.stopOrbiting() .. [[
  ]]
}

local states = { moonState, apolloState }

----------------------------------------------------------------
-- TRANSITIONS within this substate
----------------------------------------------------------------
local transitions = {
  -- Transition to/from this state
  {
    From = "Home",
    To = "Moon",
    Action = goToMoon
  },
  {
    From = "Moon",
    To = "Home"
  },
  -- Apollo
  {
    From = "Moon",
