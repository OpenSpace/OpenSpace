local util = asset.require('./../utility_functions')

----------------------------------------------------------------
-- STATES
----------------------------------------------------------------
local cbrTargetDistance = 36E7

local cbrState = {
    Identifier = "CBR",
    Enter = [[
        ]] .. util.setOrbitSpeedFactor(0.4) .. [[
        ]] .. util.orbitOnArrival() .. [[
    ]],
    Exit = [[
        ]] .. util.stopOrbiting() .. [[
    ]]
}

local states = { cbrState }

----------------------------------------------------------------
-- TRANSITIONS within this substate
----------------------------------------------------------------
local transitions = {
  -- Transition to this state
  {
    From = "SolarSystem",
    To = "CBR",
    Action = util.applyLinearFlight(cbrTargetDistance, 1.5)
  }
}

asset.export("states", states)
asset.export("transitions", transitions)
