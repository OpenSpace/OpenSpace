local scale = 149597870700 -- 1 AU

local radialGrid = {
  Identifier = "ExampleRadialGrid",
  Parent = "Root",
  Transform = {
    Scale = {
      Type = "StaticScale",
      Scale = scale
    }
  },
  Renderable = {
    Type = "RenderableRadialGrid",
    Opacity = 0.8,
    Color = { 0.6, 1.0, 0.7 },
    LineWidth = 3.0,
    GridSegments = { 3, 4 },
    Radii = { 0.2, 1.0 },
    Enabled = false
  },
  GUI = {
    Name = "Example Radial Grid",
    Path = "/Examples/Grids"
  }
}

local planarGrid = {
  Identifier = "ExampleGrid",
  Transform = {
    Scale = {
      Type = "StaticScale",
      Scale = scale
    }
  },
  Renderable = {
    Type = "RenderableGrid",
    Color = { 0.0, 1.0, 0.8 },
    LineWidth = 2.0,
    Segments = { 5, 10 },
    Size = { 1, 2 },
    Enabled = false
  },
  GUI = {
    Name = "Example Grid",
    Path = "/Examples/Grids"
  }
}

local sphericalGrid = {
  Identifier = "ExampleSphericalGrid",
  Transform = {
    Scale = {
      Type = "StaticScale",
      Scale = scale
    }
  },
  Renderable = {
    Type = "RenderableSphericalGrid",
    Color = { 1.0, 0.5, 0.2 },
    LineWidth = 2.0,
    Segments = 40,
    Enabled = false
  },
  GUI = {
    Name = "Example Spherical Grid",
    Path = "/Examples/Grids"
  }
}

local boxGrid = {
  Identifier = "ExampleBoxGrid",
  Transform = {
    Scale = {
      Type = "StaticScale",
      Scale = scale
    }
  },
  Renderable = {
    Type = "RenderableBoxGrid",
    Color = { 0.5, 0.0, 1.0 },
    LineWidth = 2.0,
    Size = { 2, 2, 2 },
    Enabled = false
  },
  GUI = {
    Name = "Example Box Grid",
    Path = "/Examples/Grids"
  }
}

asset.onInitialize(function()
  openspace.addSceneGraphNode(radialGrid)
  asset.registerIdentifierWithMeta(radialGrid.Identifier)
  openspace.addSceneGraphNode(planarGrid)
  asset.registerIdentifierWithMeta(planarGrid.Identifier)
  openspace.addSceneGraphNode(sphericalGrid)
  asset.registerIdentifierWithMeta(sphericalGrid.Identifier)
  openspace.addSceneGraphNode(boxGrid)
  asset.registerIdentifierWithMeta(boxGrid.Identifier)
end)
  
asset.onDeinitialize(function()
  openspace.removeSceneGraphNode(boxGrid.Identifier)
  openspace.removeSceneGraphNode(sphericalGrid.Identifier)
  openspace.removeSceneGraphNode(planarGrid.Identifier)
  openspace.removeSceneGraphNode(radialGrid.Identifier)
end)
  
asset.export(radialGrid.Identifier, radialGrid)
asset.export(sphericalGrid.Identifier, sphericalGrid)
asset.export(planarGrid.Identifier, planarGrid)
asset.export(boxGrid.Identifier, boxGrid)
