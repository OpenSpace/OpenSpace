local SphericalGrid = {
  Identifier = "ExampleSphericalGrid",
  Transform = {
    Scale = {
      Type = "StaticScale",
      Scale = AU
    }
  },
  Renderable = {
    Type = "RenderableSphericalGrid",
    Color = { 1.0, 0.5, 0.2 },
    LineWidth = 2.0,
    Segments = 40
  },
  GUI = {
    Name = "Example Spherical Grid",
    Description = [[A grid in the form of a 3D sphere.]],
    Path = "/Examples/Grids"
  }
}

local BoxGrid = {
  Identifier = "ExampleBoxGrid",
  Transform = {
    Scale = {
      Type = "StaticScale",
      Scale = AU
    }
  },
  Renderable = {
    Type = "RenderableBoxGrid",
    Color = { 0.5, 0.0, 1.0 },
    LineWidth = 2.0,
    Size = { 2, 2, 2 },
    Enabled = false
  },
  GUI = {
    Name = "Example Box Grid",
    Description = [[A grid in the form of a 3D box.]],
    Path = "/Examples/Grids"
  }
