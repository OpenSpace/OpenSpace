local earth = asset.require('scene/solarsystem/planets/earth/earth')
local earthIdentifier = earth.Earth.Identifier

local Example_SelfIntersection = {
  Identifier = "SelfIntersection",
  File = asset.localResource("./files/polygon_selfintersection.geojson"),
  HeightOffset = 1000.0,
  DefaultProperties = {
    Color = { 0.0, 0.0, 1.0 }
  },
  Name = "Example Polygon (self-intersection)" -- TODO: show in GUI (like layers)
}

asset.onInitialize(function()
  openspace.globebrowsing.addGeoJson(earthIdentifier, Example_SelfIntersection)
end)

asset.onDeinitialize(function()
  openspace.globebrowsing.deleteGeoJson(earthIdentifier, Example_SelfIntersection)
end)

asset.export(Example_SelfIntersection)
