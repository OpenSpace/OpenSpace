local earth = asset.require('scene/solarsystem/planets/earth/earth')
local earthIdentifier = earth.Earth.Identifier

local Example_Holes = {
  Identifier = "PolygonWithHoles",
  File = asset.localResource("./files/polygon_with_holes.geojson"),
  HeightOffset = 2000.0,
  DefaultProperties = {
    Color = { 0.0, 1.0, 1.0 }
  },
  Name = "Example Polygon (holes)"  -- TODO: show in GUI (like layers)
}

local Example_Holes_Overlapping = {
  Identifier = "PolygonWithOverlappingHoles",
  File = asset.localResource("./files/polygon_with_overlapping_holes.geojson"),
  HeightOffset = 2000.0,
  DefaultProperties = {
    Color = { 0.0, 0.5, 1.0 }
  },
  Name = "Example Polygon (overlapping holes)" -- TODO: show in GUI (like layers)
}

asset.onInitialize(function()
  openspace.globebrowsing.addGeoJson(earthIdentifier, Example_Holes)
  openspace.globebrowsing.addGeoJson(earthIdentifier, Example_Holes_Overlapping)
end)

asset.onDeinitialize(function()
  openspace.globebrowsing.deleteGeoJson(earthIdentifier, Example_Holes)
  openspace.globebrowsing.deleteGeoJson(earthIdentifier, Example_Holes_Overlapping)
end)

asset.export(Example_Holes)
asset.export(Example_Holes_Overlapping)
