local earthAsset = asset.require("scene/solarsystem/planets/earth/earth")

-- Color mapped points close to Earth
local Object = {
  Identifier = "Example_renderablePoints",
  Parent = earthAsset.Earth.Identifier,
  Transform = {
    -- Scale point cloud up so that we can actually see it
    Scale = {
      Type = "StaticScale",
      Scale = 1000
    }
  }
  Renderable = {
    Type = "RenderablePointCloud",
    File = asset.localResource("data/dummydata.csv"),
    Coloring = {
      ColorMap = {
        File = asset.localResource("viridis.cmap")
      }
    },
    SizeSettings = {
      ScaleExponent = 32.0,
      BillboardMaxPixelSize = 4.7,
      EnablePixelSizeControl = true
    }
  },
  GUI = {
    Name = "Dummy Point Cloud",
    Path = "/Example",
    Description = [[]]
  }
}


asset.onInitialize(function()
  openspace.addSceneGraphNode(Object)
end)

asset.onDeinitialize(function()
  openspace.removeSceneGraphNode(Object)
end)

asset.export(Object)
