local assetHelper = asset.require('util/asset_helper')

local i = 1
for z=1,3 do
    for y=1,3 do
        for x=1,3 do
            local sphere = {
                Identifier = "ExampleSphere" .. i,
                Transform = {
                    Translation = {
                        Type = "StaticTranslation",
                        Position = {x, y, z}
                    }
                },
                Renderable = {
                    Type = "RenderableSphere",
                    Enabled = true,
                    Size = 0.20 + i * 0.01,
                    Segments = 80,
                    Opacity = 1,
                    Texture = "${DATA}/test2.jpg",
                    Orientation = "Both",
                },
                GUI = {
                    Name = "Test Sphere "  .. i,
                    Path = "/Other/Spheres"
                }
            }
            assetHelper.registerSceneGraphNodesAndExport(asset, { sphere })
            i = i + 1
        end
    end
end

