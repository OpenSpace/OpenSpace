local Item = {
  Type = "DashboardItemDistance",
  Identifier = "Distance",
  GuiName = "Distance",
  SourceType = "Camera",
  DestinationType = "Focus"
}


asset.onInitialize(function()
  openspace.dashboard.addDashboardItem(Item)
end)

asset.onDeinitialize(function()
  openspace.dashboard.removeDashboardItem(Item)
end)

asset.export(Item)



asset.meta = {
