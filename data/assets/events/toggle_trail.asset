local action = asset.require('actions/toggle_trail')

asset.onInitialize(function()
  openspace.event.registerEventAction(
    "CameraTransition",
    action.show_trail,
    { Before = "ApproachSphere", After = "Outside"}
  );
  openspace.event.registerEventAction(
    "CameraTransition",
    action.hide_trail,
    { Before = "Outside", After = "ApproachSphere" }
  );
end)

asset.onDeinitialize(function()
  openspace.event.unregisterEventAction(
    "CameraTransition",
    action.show_trail,
    { Before = "ApproachSphere", After = "Outside"}
  );
  openspace.event.unregisterEventAction(
    "CameraTransition",
    action.hide_trail,
    { Before = "Outside", After = "ApproachSphere" }
  );
end)
