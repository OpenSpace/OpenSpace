local action = asset.require('actions/toggle_trail')

asset.onInitialize(function()
  openspace.event.registerEventAction(
    "CameraTransition",
    action.show_trail,
    { Transition = "Exiting" }
  );
  openspace.event.registerEventAction(
    "CameraTransition",
    action.hide_trail,
    { Transition = "Approaching" }
  );
end)

asset.onDeinitialize(function()
  openspace.event.unregisterEventAction(
    "CameraTransition",
    action.show_trail,
    { Transition = "Exiting" }
  );
  openspace.event.unregisterEventAction(
    "CameraTransition",
    action.hide_trail,
    { Transition = "Approaching" }
  );
end)
