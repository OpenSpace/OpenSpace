local action = asset.require('actions/toggle_trail')

asset.onInitialize(function()
  openspace.event.registerEventAction("CameraTransition", action.hide_my_trail);
  openspace.event.registerEventAction("CameraTransition", action.show_my_trail);
end)

asset.onDeinitialize(function()
  openspace.event.unregisterEventAction("CameraTransition", action.hide_my_trail);
  openspace.event.unregisterEventAction("CameraTransition", action.show_my_trail);
end)
