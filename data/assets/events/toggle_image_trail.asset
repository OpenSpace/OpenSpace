local offaction = {
    Identifier = "turnoffhumans",
    Name = "Humans off",
    Command = 'openspace.setPropertyValueSingle("Scene.allhumans.Renderable.Fade", 0, 1); openspace.setPropertyValueSingle("ScreenSpace.humans.Fade", 0, 1)',
    GuiPath = "/RenderableEvent",
    IsLocal = true
}

local onaction = {
    Identifier = "turnonhumans",
    Name = "Humans on",
    Command = 'openspace.setPropertyValueSingle("Scene.allhumans.Renderable.Fade", 1, 2); openspace.setPropertyValueSingle("ScreenSpace.humans.Fade", 1, 1)',
    GuiPath = "/RenderableEvent",
    IsLocal = true
}


asset.onInitialize(function()
  openspace.action.registerAction(offaction)
  openspace.action.registerAction(onaction)
  openspace.event.registerEventAction(
    "RenderableDisabled",
    offaction.Identifier,
    { Node = "all" }
  )
  openspace.event.registerEventAction(
    "RenderableEnabled",
    onaction.Identifier,
    { Node = "all" }
  )

end)