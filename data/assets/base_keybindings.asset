asset.require("./base")
local allTrailsAction = asset.require("actions/trails/toggle_all_trails")
local allTrailsInstantAction = asset.require("actions/trails/toggle_all_trails")
local constellations = asset.require("scene/milkyway/constellations/constellation_art")



local TogglePlanetLabels = {
  Identifier = "os_default.TogglePlanetLabels",
  Name = "Toggle planet labels",
  Command = [[openspace.toggleFade("{solarsystem_labels}.Renderable")]],
  Documentation = "Turns on visibility for all solar system labels",
  GuiPath = "/Solar System",
  IsLocal = false
}


asset.onInitialize(function()
  openspace.action.registerAction(TogglePlanetLabels)
  openspace.bindKey("L", TogglePlanetLabels)

  openspace.bindKey("T", allTrailsAction.ToggleTrails)
  openspace.bindKey("SHIFT+T", allTrailsInstantAction.ToggleTrailsInstant)

  openspace.bindKey("V", constellations.ShowZodiacArt)
  openspace.bindKey("Shift+V", constellations.HideZodiacArt)

  openspace.bindKey("C", constellations.ShowArtAction)
  openspace.bindKey("SHIFT+C", constellations.HideArtAction)
  openspace.bindKey("CTRL+C", constellations.DisableArtAction)
end)

asset.onDeinitialize(function()
  openspace.clearKey("CTRL+C")
  openspace.clearKey("SHIFT+C")
  openspace.clearKey("C")

  openspace.clearKey("Shift+V")
  openspace.clearKey("V")

  openspace.clearKey("SHIFT+T")
  openspace.clearKey("T")

  openspace.action.removeAction(TogglePlanetLabels)
  openspace.clearKey("L")
end)

asset.export("TogglePlanetLabels", TogglePlanetLabels.Identifier)
