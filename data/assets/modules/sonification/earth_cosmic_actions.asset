asset.onInitialize(function ()
  openspace.action.registerAction(toggle_sonifications)
  openspace.action.registerAction(enable_cosmic)
  openspace.action.registerAction(enable_planets)
end)

asset.onDeinitialize(function ()
  openspace.action.removeAction(enable_planets)
  openspace.action.removeAction(enable_cosmic)
  openspace.action.removeAction(toggle_sonifications)
end)

