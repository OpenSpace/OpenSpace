
local toggle_sonifications = {
  Identifier = "module.sonification.toggle.enabled",
  Name = "Toggle sonifications",
  Command = [[
    local value = openspace.getPropertyValue("Modules.Sonification.Enabled")
    openspace.setPropertyValueSingle("Modules.Sonification.Enabled", not value)
  ]],
  Documentation = "Toggles whether the sonifications should be enabled or disabled",
  GuiPath = "/Sonification",
  isLocal = false
}

asset.onInitialize(function ()
  openspace.action.registerAction(toggle_sonifications)
end)

asset.onDeinitialize(function ()
  openspace.action.removeAction(toggle_sonifications)
end)

asset.meta = {
  Name = "Sonification Module Actions",
  Version = "1.1",
  Description = [[Actions that are relevant for the sonification module]],
  Author = "OpenSpace Team",
  URL = "http://openspaceproject.com",
  License = "MIT license"
}
